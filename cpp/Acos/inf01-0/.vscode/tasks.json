{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file to DLL",
            "command": "C:\\MinGW\\bin\\g++.exe",
            "args": [
                "-shared",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\ops${fileBasenameNoExtension}.dll"
                "-I",
                "C:\\Users\\Antekov\\AppData\\Local\\Programs\\Python\\Python38\\include\\",
                "-L",
                "C:\\Users\\Antekov\\AppData\\Local\\Programs\\Python\\Python38\\libs\\"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}